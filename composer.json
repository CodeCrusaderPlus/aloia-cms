{
  "name": "roelofjan-elsinga/flat-file-cms",
  "description": "A drop-in flat file CMS for Laravel.",
  "keywords": [
    "laravel",
    "cms",
    "file"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Roelof Jan Elsinga",
      "email": "roelofjanelsinga@gmail.com"
    }
  ],
  "scripts": {
    "post-install-cmd": "vendor/bin/cghooks add --ignore-lock",
    "post-update-cmd": "vendor/bin/cghooks update"
  },
  "autoload": {
    "psr-4": {
      "FlatFileCms\\": "src/",
      "FlatFileCms\\Tests\\": "tests/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ]
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "./vendor/bin/php-cs-fixer fix . --rules=@PSR2"
      ],
      "pre-push": [
        "./vendor/bin/php-cs-fixer fix --dry-run . --rules=@PSR2"
      ],
      "post-merge": "composer install"
    },
    "laravel": {
      "providers": [
        "FlatFileCms\\FlatFileCmsServiceProvider"
      ]
    }
  },
  "require": {
    "roelofjan-elsinga/content-to-html-parser": "^0.4.0",
    "illuminate/support": "^5.7",
    "illuminate/console": "^5.7",
    "ext-json": "*",
    "ext-dom": "*"
  },
  "require-dev": {
    "orchestra/testbench": "^3.8",
    "mikey179/vfsstream": "^1.6",
    "phpunit/phpunit": "^8.3",
    "spatie/phpunit-watcher": "^1.11",
    "friendsofphp/php-cs-fixer": "^2.15",
    "brainmaestro/composer-git-hooks": "^2.7"
  }
}
